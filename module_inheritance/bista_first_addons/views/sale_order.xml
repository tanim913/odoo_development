<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_order_form_extended" model="ir.ui.view">
        <field name="name">sale.order.contacts.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='payment_term_id']" position='after'> <!-- after, before, inside, replace, attributes -->
                 <field name="contact_no"/>
                 <field name="secondary_contact_no" widget ="phone"/>
            </xpath>
            
        </field>
    </record>


    


</odoo> 