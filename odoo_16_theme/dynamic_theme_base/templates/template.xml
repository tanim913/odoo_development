    <!-- Space Dynammic Snippets -->
    <template id="dynaspa_snippets" inherit_id="website.snippets" name="Space Dynammic Snippets">
        <xpath expr="//div[@id='snippet_structure']" position="before">
            <div id="snippet_structure" class="o_panel">
                <div class="o_panel_header">Space Dynamic</div>
                <div class="o_panel_body">
                    <t t-snippet="dynamic_theme_base.opening_section"
                        t-thumbnail="/theme_space_dynamic/static/src/img/snippet_thumbs/opening_section.svg">
                        <keywords>opening, open</keywords>
                    </t>
                    <t t-snippet="dynamic_theme_base.about_us_section"
                        t-thumbnail="/theme_space_dynamic/static/src/img/snippet_thumbs/about_us_section.svg">
                        <keywords>about us, aboutus</keywords>
                    </t>
                    <t t-snippet="dynamic_theme_base.services_section"
                        t-thumbnail="/theme_space_dynamic/static/src/img/snippet_thumbs/services_section.svg">
                        <keywords>services, service</keywords>
                    </t>
                    <t t-snippet="dynamic_theme_base.portfolio_section"
                        t-thumbnail="/theme_space_dynamic/static/src/img/snippet_thumbs/portfolio_sectiom.svg">
                        <keywords>portfolio, port</keywords>
                    </t>
                    <t t-snippet="dynamic_theme_base.our_blog_section"
                        t-thumbnail="/theme_space_dynamic/static/src/img/snippet_thumbs/our_blog_section.svg">
                        <keywords>blog, our blog</keywords>
                    </t>
                    <t t-snippet="dynamic_theme_base.contact_us_section"
                        t-thumbnail="/theme_space_dynamic/static/src/img/snippet_thumbs/contact_us_section.svg">
                        <keywords>contact, message</keywords>
                    </t>
                </div>
            </div>
        </xpath>
